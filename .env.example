# 恋语AI 环境配置文件模板
# 复制此文件为 .env 并填入实际配置值

# ===================
# API 配置
# ===================

# API 基础地址
API_BASE_URL=https://api.lianyuai.com

# API 密钥（如果需要）
API_KEY=your-api-key-here

# API 版本
API_VERSION=v1

# ===================
# AI 模型配置
# ===================

# OpenAI 配置
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1

# Claude 配置
CLAUDE_API_KEY=your-claude-api-key
CLAUDE_BASE_URL=https://api.anthropic.com

# Gemini 配置
GEMINI_API_KEY=your-gemini-api-key
GEMINI_BASE_URL=https://generativelanguage.googleapis.com

# ===================
# 小程序配置
# ===================

# 小程序 AppID
MINIPROGRAM_APP_ID=your-miniprogram-appid

# 小程序 AppSecret（服务端使用）
MINIPROGRAM_APP_SECRET=your-miniprogram-appsecret

# ===================
# Capacitor 配置
# ===================

# 应用包名
CAPACITOR_APP_ID=com.lianyuai.app

# 应用名称
CAPACITOR_APP_NAME=恋语AI

# 应用版本
CAPACITOR_APP_VERSION=1.0.0

# ===================
# 推送通知配置
# ===================

# Firebase 配置（Android推送）
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_MESSAGING_SENDER_ID=your-sender-id

# APNs 配置（iOS推送）
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
APNS_BUNDLE_ID=com.lianyuai.app

# ===================
# 第三方服务配置
# ===================

# 文件存储服务
CLOUD_STORAGE_BUCKET=your-storage-bucket
CLOUD_STORAGE_REGION=your-storage-region
CLOUD_STORAGE_ACCESS_KEY=your-access-key
CLOUD_STORAGE_SECRET_KEY=your-secret-key

# 语音识别服务
SPEECH_API_KEY=your-speech-api-key
SPEECH_API_REGION=your-speech-region

# 图像识别服务
VISION_API_KEY=your-vision-api-key

# ===================
# 数据库配置
# ===================

# 数据库连接字符串
DATABASE_URL=your-database-url

# Redis 配置（缓存）
REDIS_URL=your-redis-url
REDIS_PASSWORD=your-redis-password

# ===================
# 安全配置
# ===================

# JWT 密钥
JWT_SECRET=your-jwt-secret-key

# 加密密钥
ENCRYPTION_KEY=your-encryption-key

# CORS 允许的域名
CORS_ORIGINS=https://lianyuai.com,https://www.lianyuai.com

# ===================
# 开发环境配置
# ===================

# 环境类型 (development, staging, production)
NODE_ENV=development

# 调试模式
DEBUG=true

# 日志级别 (error, warn, info, debug)
LOG_LEVEL=debug

# 开发服务器端口
DEV_SERVER_PORT=8080

# 热重载
HOT_RELOAD=true

# ===================
# 监控和分析
# ===================

# Google Analytics
GA_TRACKING_ID=your-ga-tracking-id

# 错误监控
SENTRY_DSN=your-sentry-dsn

# 性能监控
PERFORMANCE_MONITORING_KEY=your-performance-key

# ===================
# CDN 配置
# ===================

# CDN 基础地址
CDN_BASE_URL=https://cdn.lianyuai.com

# 静态资源版本
STATIC_VERSION=1.0.0

# ===================
# 邮件服务配置
# ===================

# SMTP 配置
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password

# 发件人信息
MAIL_FROM_NAME=恋语AI
MAIL_FROM_ADDRESS=noreply@lianyuai.com

# ===================
# 支付配置
# ===================

# 微信支付
WECHAT_PAY_APP_ID=your-wechat-pay-appid
WECHAT_PAY_MCH_ID=your-wechat-pay-mchid
WECHAT_PAY_KEY=your-wechat-pay-key

# 支付宝
ALIPAY_APP_ID=your-alipay-appid
ALIPAY_PRIVATE_KEY=your-alipay-private-key
ALIPAY_PUBLIC_KEY=your-alipay-public-key

# ===================
# 其他配置
# ===================

# 应用官网
APP_WEBSITE=https://lianyuai.com

# 客服联系方式
CUSTOMER_SERVICE_EMAIL=support@lianyuai.com
CUSTOMER_SERVICE_PHONE=400-123-4567

# 隐私政策和用户协议
PRIVACY_POLICY_URL=https://lianyuai.com/privacy
TERMS_OF_SERVICE_URL=https://lianyuai.com/terms

# 应用下载链接
APP_STORE_URL=https://apps.apple.com/app/lianyuai
GOOGLE_PLAY_URL=https://play.google.com/store/apps/details?id=com.lianyuai.app

# 社交媒体
WEIBO_URL=https://weibo.com/lianyuai
WECHAT_QR_CODE=https://cdn.lianyuai.com/qr/wechat.png